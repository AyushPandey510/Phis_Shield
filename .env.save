# ===========================================
# üñ•Ô∏è FLASK APPLICATION SETTINGS
# ===========================================

# Flask Debug Mode (set to False in production)
FLASK_DEBUG=False

# Secret key for Flask sessions (generate a secure random key)
SECRET_KEY=dev-secret-key-change-this-in-production-12345678901234567890

# Server configuration
HOST=0.0.0.0
PORT=5000

# ===========================================
# üîë API KEYS & EXTERNAL SERVICES
# ===========================================

# PhisGuard API Key (for external API access)
API_KEY=dev-api-key-change-this-in-production-1234567890123456

# Admin Dashboard Credentials
ADMIN_USERNAME=admin
ADMIN_PASSWORD=admin123

# Google Safe Browsing API (Get from: https://console.developers.google.com/)
# Required for real-time threat detection
GOOGLE_SAFE_BROWSING_API_KEY=AIzaSyCns2BaFJkUp9jw526hJReuIIUy4jibJjw

# Have I Been Pwned API (Get from: https://haveibeenpwned.com/API/Key)
# Required for password breach checking
HIBP_API_KEY=your-haveibeenpwned-api-key-here

# VirusTotal API (Get from: https://www.virustotal.com/gui/user/apikey)
# Required for malware and URL analysis
VIRUSTOTAL_API_KEY=e4a749d5c5b0dfce90b09f333f6f7508020eba6b63be7f7b9fb0331f71468c21

# Have I Been Pwned API URLs (usually don't need to change)
HIBP_API_URL=https://api.pwnedpasswords.com/range/
HIBP_EMAIL_API_URL=https://haveibeenpwned.com/api/v3/breachedaccount/

# PhishTank API (Get from: https://phishtank.com/developer_info.php)
# Optional: Additional phishing URL database
PHISHTANK_API_KEY=your-phishtank-api-key-here

# LeakCheck API (Demo key provided - upgrade for production)
LEAKCHECK_API_KEY=demo

# ===========================================
# üîí SECURITY & SSL SETTINGS
# ===========================================

# SSL Certificate Verification
SSL_VERIFY_CERTIFICATES=True

# Request timeout settings
REQUEST_TIMEOUT=10

# Maximum redirects to follow
MAX_REDIRECTS=10

# ===========================================
# üìä LOGGING & MONITORING
# ===========================================

# Logging level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Log file location
LOG_FILE=app.log

# ===========================================
# üóÑÔ∏è DATABASE SETTINGS (Future Use)
# ===========================================

# Database URL (SQLite for development)
# DATABASE_URL=sqlite:///phisguard.db

# ===========================================
# üåê CORS & NETWORK SETTINGS
# ===========================================

# CORS origins (restrict in production - UPDATE FOR YOUR DOMAIN)
CORS_ORIGINS=chrome-extension://*,http://localhost:3000,https://yourdomain.com

# Redis URL for rate limiting (production-critical)
REDIS_URL=redis://localhost:6379/0

# Rate limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=60

# Session timeout
SESSION_TIMEOUT_MINUTES=30

# ===========================================
# üöÄ PRODUCTION DEPLOYMENT NOTES
# ===========================================

# For production deployment:
# 1. Set FLASK_DEBUG=False
# 2. Generate a secure SECRET_KEY
# 3. Add real API keys from the services above
# 4. Restrict CORS_ORIGINS to your domain
# 5. Use environment variables instead of .env file
# 6. Set up proper logging and monitoring
# 7. Use a production WSGI server (Gunicorn, uWSGI)

# ===========================================
# üìã SETUP INSTRUCTIONS
# ===========================================

# 1. Copy this file: cp .env.example .env
# 2. Fill in your actual API keys
# 3. Never commit the .env file to version control
# 4. Use different .env files for different environments

# API Key Sources:
# - Google Safe Browsing: https://console.developers.google.com/
